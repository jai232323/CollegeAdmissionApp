<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".Staffs.AdminEmailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/admin_logo"
        android:layout_gravity="center"/>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        app:startIconDrawable="@drawable/email"
        app:boxStrokeColor="@color/bluecolor"
        app:startIconTint="@color/bluecolor"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Email..."
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_black"
            android:id="@+id/AdminEmail"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/password"
        app:startIconTint="@color/bluecolor"
        app:boxStrokeColor="@color/bluecolor"

        app:passwordToggleTint="@color/bluecolor"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Password..."
            android:inputType="textPassword"
            android:fontFamily="@font/roboto_black"
            android:id="@+id/AdminPassword"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/admin_login"
            app:strokeColor="@color/red"
            app:cornerRadius="5dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="Admin Login"
            android:layout_marginTop="15dp"
            android:textColor="@color/red"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_black"

            android:textSize="25sp"/>

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>